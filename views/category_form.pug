extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', name='name', value=(undefined === category? '' | category.name))
      input#name.form-control(type='text', name='image', value=(undefined === category? '' | category.image))

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul  
      for error in errors
        li!= error.msg

