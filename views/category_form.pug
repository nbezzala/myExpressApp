extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', name='name' value=(undefined === category? '' : category.name))
      br
      label(for='description') Description:
      input#description.form-control(type='text', name='description' value=(undefined === category? '' : category.description))
      br
      label(for='image') Image:
      input#image.form-control(type='text', name='image' value=(undefined === category? '' : category.image))
      br
      br
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul  
      for error in errors
        li!= error.msg

